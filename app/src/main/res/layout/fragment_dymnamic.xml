<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorSecondBg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/camera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/dyncmic_camera"
            android:layout_marginStart="16dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="24dp">

            <LinearLayout
                android:id="@+id/uptab_hot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:clickable="true"
                android:gravity="bottom|center_horizontal"
                >

                <TextView
                    android:id="@+id/uptab_hot_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:text="热门"
                    android:textColor="@color/uptabtext_color"
                    android:textSize="17sp"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/uptab_hot_image"
                    android:layout_width="36dp"
                    android:layout_height="3dp"
                    android:duplicateParentState="true"
                    android:background="@drawable/uptab_image"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="24dp">

            <LinearLayout
                android:id="@+id/uptab_moments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:clickable="true"
                android:gravity="bottom|center_horizontal"
                >

                <TextView
                    android:id="@+id/uptab_moments_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:text="朋友圈"
                    android:textColor="@color/uptabtext_color"
                    android:textSize="17sp"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/uptab_moments_image"
                    android:layout_width="36dp"
                    android:layout_height="3dp"
                    android:duplicateParentState="true"
                    android:background="@drawable/uptab_image"
                    />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/message"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/dyncmic_message"
            android:layout_marginEnd="16dp"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

</LinearLayout>